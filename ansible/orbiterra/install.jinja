resources:
- name: openshift
  type: openshift.jinja
  properties:
    zone: us-central1-a
    image-infra: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/ostd-infra-v4
    image-infra-docker: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/ostd-infra-docker-v4
    image-master: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/ostd-master-v4
    image-master-docker: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/ostd-master-docker-v4
    image-nfs: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/ostd-nfs-v4
    image-node1: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/ostd-node1-v4
    image-node2: https://www.googleapis.com/compute/v1/projects/openshift-test-drive/global/images/ostd-node2-v4
    mtype-infra: n1-standard-1
    mtype-master: n1-standard-2
    mtype-nfs: g1-small
    mtype-node: n1-standard-2

outputs:
- name: OpenShiftConsole
  value: $(ref.openshift.OpenShiftConsole)
- name: user
  value: $(ref.openshift.user)
- name: password
  value: $(ref.openshift.password)
